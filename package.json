{
  "dependencies": {
    "stryker": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.1.1",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-yml": "^1.18.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "npm-groovy-lint": "^15.2.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "yaml-eslint-parser": "^1.2.3"
  },
  "scripts": {
    "lint:jenkins": "npm-groovy-lint Jenkinsfile",
    "format:jenkins": "npm-groovy-lint --fix Jenkinsfile",
    "mock:server": "prism mock openapi.yaml -p 4010 -h 0.0.0.0",
    "lint": "eslint \"{src,apps,packages,tests,e2e,ui-playwright-ts}/**/*.{js,jsx,ts,tsx}\" --max-warnings=0 --cache",
    "lint:fix": "eslint \"{src,apps,packages,tests,e2e,ui-playwright-ts}/**/*.{js,jsx,ts,tsx}\" --fix",
    "fmt": "prettier --check \"**/*.{js,ts,tsx,jsx,md,json,yml,yaml,css,html}\"",
    "fmt:write": "prettier --write \"**/*.{js,ts,tsx,jsx,md,json,yml,yaml,css,html}\"",
    "lint:md": "markdownlint \"**/*.md\" -c .markdownlint.json -i node_modules --fix",
    "lint:yml": "eslint \".github/**/*.y?(a)ml\" --ext .yml,.yaml --max-warnings=0",
    "lint:all": "npm run lint && npm run fmt && npm run lint:md && npm run lint:yml",
    "test:unit:playwright": "cd ui-playwright-ts && npm test",
    "test:unit:cypress": "cd ui-cypress && npm run test:unit"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ]
  }
}
